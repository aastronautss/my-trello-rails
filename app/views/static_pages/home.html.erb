<% if logged_in? %>
  <div>
    <%= link_to 'Log out', logout_path %>
  </div>
<% else %>
  <div>
    <%= link_to 'Register', register_path %>
  </div>

  <div>
    <%= link_to 'Log in', login_path %>
  </div>
<% end %>

<% if logged_in? %>
  <h4>Boards</h4>

  <ul>
    <li><%= link_to 'New board', new_board_path %></li>
    <% current_user.boards.each do |board| %>
      <li><%= link_to board.name, board_path(board) %></li>
    <% end %>
  </ul>
<% end %>

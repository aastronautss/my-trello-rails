.container
  .col-md-4.col-md-offset-4
    %h2 Login

    = bootstrap_form_tag url: login_path do |f|
      = f.text_field :username
      = f.password_field :password
      = f.check_box :remember
      = f.submit 'Login', class: 'btn btn-primary btn-block'
      %p= link_to 'Forgot password?', new_password_reset_path

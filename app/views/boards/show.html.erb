<h2><%= @board.name %></h2>

<aside id='menu'>
  <section>
    <h4>Members</h4>

    <ul class='member-list'>
      <% @board.members.each do |member| %>
        <li>
          <%= link_to member.username, '#' %>
        </li>
      <% end %>
    </ul>

    <% if current_user.admin_of? @board %>
      <div>
        <%= render 'add_member' %>
      </div>
    <% end %>
  </section>
</aside>

<ul id='lists'>
  <% @board.lists.each do |list| %>
    <li><%= render 'lists/list', list: list %></li>
  <% end %>
</ul>

<div class="list new-list idle">
  Add a list...
  <%= form_for @board.lists.build, id: 'new-list-form' do |f| %>
    <%= f.hidden_field :board_id %>
    <%= f.text_field :title %>

    <div>
      <%= f.submit 'Add' %>
      <%= link_to 'Cancel', '#', class: 'cancel-new-list' %>
    </div>
  <% end %>
</div>

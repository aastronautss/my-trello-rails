<aside id='menu'>
  <section>
    <h4>Members</h4>

    <ul class='member-list'>
      <% @board.members.each do |member| %>
        <li>
          <%= link_to member.username, '#' %>
        </li>
      <% end %>
    </ul>

    <% if current_user.admin_of? @board %>
      <div>
        <%= render 'add_member' %>
      </div>
    <% end %>
  </section>
</aside>

<div id='board'></div>

<script type="text/javascript">
  App.board_id = <%= @board.id %>
</script>

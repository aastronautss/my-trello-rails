{{!-- <div id="card-modal" class="modal fade" tabindex="-1"> --}}
  <div class="modal-dialog">
    <div class="modal-content clearfix">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>

          <h2 class="modal-title">{{title}}</h2>
      </div>

      <div class="modal-body clearfix">
        <aside class="actions">
          <h3>Actions</h3>
          <ul>
            <li><a href="#" class="add-checklist btn btn-default btn-sm btn-block">Add Checklist</a></li>
            <li><a href="#" class="delete-card btn btn-danger btn-sm btn-block">Delete</a></li>
          </ul>
        </aside>

        <div class="main-col">
          <section>
            <h3>Description</h3>
            <a href="#" class="edit-description-link">Edit</a>
            <p class="description">{{description}}<p>

            <form action="" method="post" class="edit-description">
              <fieldset>
                <div class="form-group">
                  <textarea class="form-control">

                  </textarea>
                </div>

                <div>
                  <input type="submit" value="Save" class="btn btn-primary btn-sm">
                  <a href="#" class="cancel-edit">Cancel</a>
                </div>
              </fieldset>
            </form>
          </section>

          {{#each checklists}}
            <section class="checklist">
              <h4>{{title}}</h4>

              <ul class="list-group check-items">
                {{#each check_items}}
                  <li class="list-group-item">
                    {{#if done}}
                      <a href="#" class="checklist-box"><span class="glyphicon glyphicon-ok"></span></a>
                      <span class="checklist-text">{{name}}</span>
                    {{else}}
                      <a href="#" class="checklist-box"><span class="glyphicon glyphicon-unchecked"></span></a>
                      <span class="checklist-text">{{name}}</span>
                    {{/if}}
                  </li>
                {{/each}}
                  <li class="add-check-item">
                    <a href="#">Add an item...</a>
                  </li>
              </ul>
            </section>
          {{/each}}

          <section class="comments">
            <h2>Activity</h2>
            <form action="" method="post" class="new-comment">
              <fieldset>
                <div>
                  <textarea name="comment-body" placeholder="Add a comment..."></textarea>
                </div>

                <div>
                  <input type="submit" value="Send" class="btn btn-primary btn-sm">
                </div>
              </fieldset>
            </form>
            <ul class="comment-list"></ul>
          </section>
        </div>
      </div>
    </div>
  </div>
